# Configurações para produção no Vercel
NODE_ENV=production

# Banco de dados - Configure no painel do Vercel
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/financeplus

# JWT - Configure no painel do Vercel
# JWT_SECRET=sua_chave_secreta_super_forte_producao
# JWT_EXPIRES_IN=7d
# JWT_REFRESH_SECRET=sua_refresh_secret_producao
# JWT_REFRESH_EXPIRES_IN=30d

# Sistema de Assinaturas Manual - Não requer Stripe
# Configurações de pagamento removidas para sistema manual

# Email - Configure no painel do Vercel
# EMAIL_FROM=noreply@seudominio.com
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu_email@gmail.com
# EMAIL_PASS=sua_senha_app

# URLs - Atualize com seu domínio
# FRONTEND_URL=https://seudominio.vercel.app
# BASE_URL=https://seudominio.vercel.app
# API_URL=https://seudominio.vercel.app/api

# Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true

# Planos e preços (em centavos)
PLAN_FREE_PRICE=0
PLAN_PRO_PRICE=2990
PLAN_ENTERPRISE_PRICE=9990