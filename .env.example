# FinancePlus SaaS - Variáveis de Ambiente

# Ambiente
NODE_ENV=development

# Servidor
PORT=3000
FRONTEND_URL=http://localhost:3000

# Banco de Dados - Vercel Postgres (configurado automaticamente no deploy)
# As variáveis abaixo são configuradas automaticamente pelo Vercel
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NON_POOLING=
# POSTGRES_USER=
# POSTGRES_HOST=
# POSTGRES_PASSWORD=
# POSTGRES_DATABASE=

# JWT
JWT_SECRET=financeplus_super_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Sistema de Assinaturas Manual
# Não requer configurações de pagamento externas

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@financeplus.com

# URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true

# Planos e Preços (em centavos)
PLAN_FREE_PRICE=0
PLAN_PRO_PRICE=2990
PLAN_ENTERPRISE_PRICE=9990

# Limites por Plano
FREE_ACCOUNTS_LIMIT=3
FREE_CATEGORIES_LIMIT=10
FREE_TRANSACTIONS_LIMIT=100

PRO_ACCOUNTS_LIMIT=10
PRO_CATEGORIES_LIMIT=50
PRO_TRANSACTIONS_LIMIT=1000

ENTERPRISE_ACCOUNTS_LIMIT=-1
ENTERPRISE_CATEGORIES_LIMIT=-1
ENTERPRISE_TRANSACTIONS_LIMIT=-1